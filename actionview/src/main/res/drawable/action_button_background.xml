<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/actionViewDefaultActionTextBackgroundColor" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/actionViewDefaultActionTextBackgroundColor" />
            <stroke android:color="@color/actionViewDefaultActionTextBackgroundStrokeColor" />
        </shape>
    </item>
    <item  >
        <shape android:shape="rectangle">
            <solid android:color="@color/actionViewDefaultActionTextBackgroundColor" />
            <stroke
                android:width="1dp"
                android:color="@color/actionViewDefaultActionTextBackgroundStrokeColor" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>